{
  "name": "lbiltech/telegram-bot-github-notify",
  "description": "A Telegram bot send notify Gitlab and Github events to Telegram channels",
  "keywords": [
    "telegram",
    "bot",
    "github",
    "gitlab",
    "notify",
    "events",
    "webhook",
    "telegram-notifier",
    "github-notifier",
    "gitlab-notifier",
    "github-telegram-bot",
    "gitlab-telegram-bot",
    "telegram-bot-github-notify",
    "telegram-bot-gitlab-notify"
  ],
  "type": "project",
  "homepage": "https://github.com/lbiltech/telegram-bot-github-notify",
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "eleirbag89/telegrambotphp": "^1.4",
    "guzzlehttp/guzzle": "^7.7",
    "symfony/http-foundation": "^6.3",
    "vlucas/phpdotenv": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "TelegramNotificationBot\\App\\": "src/"
    },
    "files": [
      "common/helpers.php"
    ]
  },
  "authors": [
    {
      "name": "Tan Nguyen",
      "email": "tannp27@gmail.com",
      "homepage": "https://tanhongit.com",
      "role": "Lead"
    }
  ],
  "support": {
    "issues": "https://github.com/lbiltech/telegram-bot-github-notify/issues"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "php -r \"file_exists('storage/json/github-event.json') || copy('config/jsons/github-event.json', 'storage/json/github-event.json');\"",
      "php -r \"file_exists('storage/json/tg-setting.json') || copy('config/jsons/tg-setting.json', 'storage/json/tg-setting.json');\"",
      "chmod -R 777 storage/json/*.json"
    ],
    "post-update-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "php -r \"file_exists('storage/json/github-event.json') || copy('config/jsons/github-event.json', 'storage/json/github-event.json');\"",
      "php -r \"file_exists('storage/json/tg-setting.json') || copy('config/jsons/tg-setting.json', 'storage/json/tg-setting.json');\"",
      "chmod -R 777 storage/json/*.json"
    ]
  }
}
